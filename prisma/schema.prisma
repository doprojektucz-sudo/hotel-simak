generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  phone     String?
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MenuItem {
  id           String   @id @default(cuid())
  name         String
  description  String?
  price        Int
  category     String
  weight       String?
  allergens    String?
  note         String?
  isVegetarian Boolean  @default(false)
  sortOrder    Int      @default(0)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([category])
}

model Drink {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Int
  category    String
  size        String?
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
}

model MenuCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  sortOrder Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DrinkCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  sortOrder Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============ DENNÍ MENU ============

model DailyMenuDish {
  id        String   @id @default(cuid())
  name      String
  weight    String?
  price     Int
  type      String   @default("MAIN")
  isActive  Boolean  @default(true)
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  menuItems DailyMenuToItem[]

  @@index([type])
  @@index([sortOrder])
}

model DailyMenu {
  id        String   @id @default(cuid())
  title     String?
  validFrom DateTime
  validTo   DateTime
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items DailyMenuToItem[]

  @@index([validFrom, validTo])
  @@index([isActive])
}

model DailyMenuToItem {
  id        String @id @default(cuid())
  menuId    String
  dishId    String
  sortOrder Int    @default(0)

  menu DailyMenu     @relation(fields: [menuId], references: [id], onDelete: Cascade)
  dish DailyMenuDish @relation(fields: [dishId], references: [id], onDelete: Cascade)

  @@unique([menuId, dishId])
  @@index([menuId])
}

model OpeningHours {
  id        String   @id @default(cuid())
  dayOfWeek Int      @unique // 0 = Pondělí, 1 = Úterý, ..., 6 = Neděle
  dayName   String // "Pondělí", "Úterý", ...
  isOpen    Boolean  @default(true)
  openTime  String? // "11:00"
  closeTime String? // "22:00"
  note      String? // Volitelná poznámka, např. "Pouze pro ubytované"
  sortOrder Int      @default(0)
  updatedAt DateTime @updatedAt

  @@index([dayOfWeek])
}
